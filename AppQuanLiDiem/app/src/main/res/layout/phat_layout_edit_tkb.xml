<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backdound_app"
    tools:context=".phat_tkb.editcourse.EditActivity">

    <ImageView
        android:id="@+id/mp_iv_bg_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingTop="50dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/mp_cv_edit_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="0dp"
            android:alpha="0.7"
            app:cardCornerRadius="15dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/backdround_layout"
                android:orientation="horizontal"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="@string/course_name"
                    android:textSize="@dimen/edit_text_size" />

                <EditText
                    android:id="@+id/mp_name_editText"
                    android:layout_width="273dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:background="@null"
                    android:hint=""
                    android:inputType="text"
                    android:textSize="@dimen/edit_text_size" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/mp_cv_edit_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:alpha="0.7"
            app:cardCornerRadius="15dp"
            app:cardElevation="3dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/backdround_layout"
                android:padding="20dp">

                <TextView
                    android:id="@+id/mp_tv_week_of_term"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/selector_text_view"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/edit_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/mp_textView4"
                    app:layout_constraintTop_toTopOf="@id/mp_view3" />

                <TextView
                    android:id="@+id/mp_textView2"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="@string/classroom"
                    android:textSize="@dimen/edit_text_size"
                    app:layout_constraintBottom_toBottomOf="@+id/mp_et_class_room"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/mp_et_class_room" />

                <EditText
                    android:id="@+id/mp_et_class_room"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@null"
                    android:hint="@string/edit_text_hint"
                    android:inputType="text"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/edit_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/mp_textView2"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/mp_view3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mp_et_class_room" />

                <TextView
                    android:id="@+id/mp_textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="@string/week_of_term"
                    android:textSize="@dimen/edit_text_size"
                    app:layout_constraintBottom_toBottomOf="@+id/mp_tv_week_of_term"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/mp_tv_week_of_term" />

                <View
                    android:id="@+id/mp_view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.39"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mp_tv_week_of_term" />

                <TextView
                    android:id="@+id/mp_textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="@string/classLength"
                    android:textSize="@dimen/edit_text_size"
                    app:layout_constraintBottom_toBottomOf="@+id/mp_tv_class_num"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/mp_tv_class_num" />

                <View
                    android:id="@+id/mp_view5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mp_tv_class_num" />

                <TextView
                    android:id="@+id/mp_textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="@string/teacher"
                    android:textSize="@dimen/edit_text_size"
                    app:layout_constraintBottom_toBottomOf="@+id/mp_ghi_chu"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/mp_ghi_chu" />

                <EditText
                    android:id="@+id/mp_ghi_chu"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/edit_text_hint"
                    android:inputType="text"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/edit_text_size"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/mp_textView6"
                    app:layout_constraintTop_toBottomOf="@id/mp_view5"
                    app:layout_constraintVertical_bias="0.4" />

                <TextView
                    android:id="@+id/mp_tv_class_num"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_text_view"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/edit_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@id/mp_textView2"
                    app:layout_constraintTop_toBottomOf="@+id/mp_view2" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>