<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white"
    android:stretchColumns="1">
    <TableRow>
        <TextView
            android:text=" ĐIỂM CẢI THIỆN"
            android:textSize="25dp"
            android:layout_span="2"
            android:gravity="center"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_marginTop="40dp"/>
    </TableRow>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/mt_buttonddk"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="ĐIỂM DỰ KIẾN"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:backgroundTint="@color/teal_700"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/buttonddk"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="ĐIỂM CẢI THIỆN"
            android:textStyle="bold"
            android:backgroundTint="@color/teal_700"
            android:textColor="@color/white"/>
    </LinearLayout>
    <TableRow>

        <TextView
            android:layout_marginTop="20dp"
            android:text="Học kì "
            android:textColor="@color/teal_700"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="40dp"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="50dp"
            android:text="Tổng kết toàn khóa"
            android:textColor="@color/teal_700"
            android:textSize="15dp"
            android:textStyle="bold"/>
    </TableRow>
    <TableRow>
        <EditText
            android:id="@+id/tbmon"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:text="B(7.0)"
            android:textColor="@color/item_1"
            android:textStyle="bold">
        </EditText>
        <EditText
            android:id="@+id/tk"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="3.0"
            android:textColor="@color/item_1"
            android:textStyle="bold">
        </EditText>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/mt_chonmh2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="2"
            android:text="Chọn môn"
            android:textColor="@color/colorTransparent"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </TableRow>
    <LinearLayout>
        <TextView
            android:id="@+id/mt_dht"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Điểm hiện tại:"
            android:textStyle="italic|bold"
            android:textColor="@color/item_1"
            android:textSize="15sp">

        </TextView>
    </LinearLayout>

    <TableRow>
        <TextView
            android:textColor="@color/colorTransparent"
            android:text="Nhập điểm dự kiến:"
            android:textSize="17sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/diemdukien1"
            android:textSize="17sp"
            android:hint="Chọn kết quả"
            android:gravity="center"
            android:inputType="text"/>
    </TableRow>


    <Button
        android:id="@+id/mt_kq2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập"
        android:textSize="17sp"
        android:layout_marginTop="40dp"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        />

</TableLayout>
